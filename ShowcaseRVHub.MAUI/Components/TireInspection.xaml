<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmmodel="clr-namespace:ShowcaseRVHub.MAUI.ViewModel.ComponentViewModel"
             x:DataType="viewmmodel:TireInspectionViewModel"
             x:Class="ShowcaseRVHub.MAUI.Components.TireInspection">
    <VerticalStackLayout IsVisible="{Binding IsTireInspection}">
        <Label 
            Text="Tire Inspection" 
            Style="{StaticResource LargeLabel}"
            FontAttributes="Bold"/>
        <Label 
            TextColor="{StaticResource LightBackground}"
            Text="Give every tire a thorough inspection. This includes (especially) the interior tires on duual wheel units. Keep in mind that tires rot from the inside out. Whatever damage you see on the outside is far worse on the inside."
            VerticalOptions="Center"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
            <CheckBox 
                IsChecked="{Binding IsTireInspectionComplete}" 
                Color="{StaticResource LightBackground}" />
            <Label 
                Margin="0,12,0,0"
                Text="Completed" 
                FontAttributes="Bold"
                TextColor="{StaticResource LightBackground}"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentView>
