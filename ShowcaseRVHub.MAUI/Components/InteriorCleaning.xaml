<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ShowcaseRVHub.MAUI.ViewModel.ComponentViewModel"
             x:DataType="viewmodel:InteriorCleaningViewModel"
             x:Class="ShowcaseRVHub.MAUI.Components.InteriorCleaning">
    <VerticalStackLayout IsVisible="{Binding IsExteriorComplete}">
        <Label 
            Text="Interior Cleaning" 
            Style="{StaticResource LargeLabel}"
            FontAttributes="Bold"/>
        <Label 
            TextColor="{StaticResource LightBackground}"
            Text="Make sure that the interior of your RV has been meticulously cleaned and sanitized before the arrival of your travelers."
            VerticalOptions="Center"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
            <CheckBox 
                IsChecked="{Binding IsInteriorComplete}" 
                Color="{StaticResource LightBackground}" />
            <Label 
                Margin="0,12,0,0"
                Text="Completed" 
                FontAttributes="Bold"
                TextColor="{StaticResource LightBackground}"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentView>
