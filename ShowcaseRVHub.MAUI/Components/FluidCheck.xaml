<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ShowcaseRVHub.MAUI.ViewModel.ComponentViewModel"
             x:DataType="viewmodel:FluidCheckViewModel"
             x:Class="ShowcaseRVHub.MAUI.Components.FluidCheck">
    <VerticalStackLayout IsVisible="{Binding IsFluidsCheck}">
        <Label 
            Text="Fluid Check" 
            Style="{StaticResource LargeLabel}"
            FontAttributes="Bold"/>
        <Label 
            TextColor="{StaticResource LightBackground}"
            Text="Generator oil, transmission fluid, brake fluid, windshield washer fluid, propane levels, fuel level and waste tank level"
            VerticalOptions="Center" />
        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
            <CheckBox IsChecked="{Binding IsFluidsCheckComplete}" Color="{StaticResource LightBackground}" />
            <Label 
                Margin="0,12,0,0"
                Text="Completed" 
                FontAttributes="Bold"
                TextColor="{StaticResource LightBackground}"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentView>
