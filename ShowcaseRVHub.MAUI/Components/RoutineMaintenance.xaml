<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ShowcaseRVHub.MAUI.ViewModel.ComponentViewModel"
             x:DataType="viewmodel:RoutineMaintenanceViewModel"
             x:Class="ShowcaseRVHub.MAUI.Components.RoutineMaintenance">
    <VerticalStackLayout IsVisible="{Binding IsRoutineMaintenance}">
        <Label 
            Text="Routine Maintenance" 
            Style="{StaticResource LargeLabel}"
            FontAttributes="Bold"/>
        <Label 
            TextColor="{StaticResource LightBackground}"
            Text="Oil changes, generator tune-ups, tire rotation, brakes, appliances, etc."
            VerticalOptions="Center"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
            <CheckBox 
                IsChecked="{Binding IsRoutineMaintenanceComplete}" 
                Color="{StaticResource LightBackground}" />
            <Label 
                Margin="0,12,0,0"
                Text="Completed" 
                FontAttributes="Bold"
                TextColor="{StaticResource LightBackground}"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentView>
