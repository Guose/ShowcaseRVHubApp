<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShowcaseRVHub.MAUI.View.ConsentAgreementView"
             xmlns:viewmodel="clr-namespace:ShowcaseRVHub.MAUI.ViewModel"
             xmlns:model="clr-namespace:ShowcaseRVHub.MAUI.Model"
             x:DataType="viewmodel:ConsentAgreementViewModel"
             Title="Content Agreement">

    <Grid>
        <VerticalStackLayout>
            <Label Text="{Binding HeaderText}"/>
            <Label Text="Consent content goes here..." />
            <HorizontalStackLayout>
                <Label Text="Showcase Rep. Signature" />
                <CheckBox/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Label Text="Renter Signature" />
                <CheckBox/>
            </HorizontalStackLayout>
            <Button 
                Text="Submit"
                FontSize="20"
                HorizontalOptions="Center"
                WidthRequest="150"
                Margin="8"
                Style="{StaticResource ButtonOutline}"
                Command="{Binding SubmitRentalCommand}"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
